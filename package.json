{
  "name": "emanuelw-portfolio",
  "version": "1.0.0",
  "description": "Portfolio website with contact form",
  "main": "dist/server/server.js",
  "scripts": {
    "start": "node dist/server/server.js",
    "dev": "concurrently \"tsc -w\" \"nodemon dist/server/server.js\" \"npm run dev:css\"",
    "build": "npm run build:css && tsc && tsc-alias && cpy index.html dist/public/ && cpy styles.css dist/public/ && cpy 'src/images/*' dist/public/images",
    "vercel-build": "npm run build:css && cpy dist/public/styles.css public && cpy dist/public/index.html public && cpy 'src/images/*' public/images && cpy 'src/static/*' public",
    "build:client": "webpack --mode production",
    "dev:client": "webpack --mode development --watch",
    "build:css": "npx tailwindcss -i ./src/styles/input.css -o ./dist/public/styles.css --minify",
    "dev:css": "npx tailwindcss -i ./src/styles/input.css -o ./dist/public/styles.css --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx,css,html}"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-rate-limit": "^7.4.0",
    "helmet": "^8.0.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.14",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.0",
    "cpy-cli": "^5.0.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "nodemon": "^3.1.4",
    "postcss": "^8.4.41",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.10",
    "ts-loader": "^9.5.1",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.5.4",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4"
  },
  "engines": {
    "node": "20.x"
  },
  "keywords": [
    "portfolio",
    "website",
    "contact-form",
    "typescript",
    "tailwindcss",
    "express"
  ],
  "author": "Emanuel WÅ‚och",
  "license": "MIT"
}
